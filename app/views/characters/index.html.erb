<h1>Listing characters</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Race</th>
    <th>Class</th>
    <th>User</th>
  </tr>

<% @characters.each do |character| %>
  <tr>
    <td><%=h character.name %></td>
    <td><%=h character.race %></td>
    <td><%=h character.char_class %></td>
    <td><%=h character.user.username %></td>
   <% if can? :show, character %><td><%= link_to 'Show', character %></td><% end %>
    <% if can? :edit, character %><td><%= link_to 'Edit', edit_character_path(character) %><% end %></td>
   <% if can? :destroy, character %><td><%= link_to 'Destroy', character, :confirm => 'Are you sure?', :method => :delete %></td><% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New character', new_character_path %>