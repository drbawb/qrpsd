<h1>New character</h1>

<% form_for(@character) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :race %><br />
    <%= f.text_field :race %>
  </p>
  <p>
    <%= f.label :char_class %><br />
    <%= f.text_field :char_class %>
  </p>
  <p>
  	<%=collection_select(:character, :campaign_id, Campaign.all, :id, :title, {:prompt => true}) %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', characters_path %>